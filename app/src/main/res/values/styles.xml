<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Question Text Style -->
    <style name="questionsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/sixteen_dp</item>
        <item name="android:layout_marginBottom">@dimen/sixteen_dp</item>
    </style>

</resources>
